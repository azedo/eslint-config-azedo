{
  // These are all the auto-save configs for better experience.
  // Based on wesbos' eslint-config package

  // Comment them out, if you don't want them
  "editor.formatOnSave": true,

  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },

  // show eslint icon at bottom toolbar
  "eslint.alwaysShowStatus": true,

  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // Hide node_modules folders
  "files.exclude": {
    "node_modules": true,
    "*/**/node_modules": true
  },

  // SVG preview default background
  "svg.preview.background": "black"
}
